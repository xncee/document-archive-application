<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox alignment="CENTER" spacing="16" style="-fx-background-color: white; -fx-padding: 24; -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.1), 15, 0, 0, 10); -fx-background-radius: 8;" xmlns:fx="http://javafx.com/javafx/8.0.0" xmlns="http://javafx.com/javafx/8.0.0">

    <!-- Icon -->
    <ImageView fitHeight="36" fitWidth="40">
        <Image url="@../icons/logo.png" /> <!-- Replace with actual folder icon path -->
    </ImageView>

    <!-- Title -->
    <Label text="DocuVault" style="-fx-font-size: 24; -fx-font-family: 'Inter'; -fx-font-weight: bold; -fx-text-fill: black;" />
    <Label text="Secure Document Management" style="-fx-font-size: 16; -fx-font-family: 'Inter'; -fx-text-fill: #737373;" />

    <!-- Form -->
    <VBox alignment="CENTER_LEFT" spacing="16" maxWidth="336">
        <!-- Username Field -->
        <VBox spacing="4">
            <Label text="Username" style="-fx-font-size: 14; -fx-font-family: 'Inter'; -fx-font-weight: medium; -fx-text-fill: #404040;" />
            <TextField promptText="Enter username" style="-fx-border-color: #D4D4D4; -fx-border-radius: 6; -fx-background-radius: 6;" />
        </VBox>

        <!-- Password Field -->
        <VBox spacing="4">
            <Label text="Password" style="-fx-font-size: 14; -fx-font-family: 'Inter'; -fx-font-weight: medium; -fx-text-fill: #404040;" />
            <PasswordField promptText="Enter password" style="-fx-border-color: #D4D4D4; -fx-border-radius: 6; -fx-background-radius: 6;" />
        </VBox>

        <!-- Remember Me & Forgot Password -->
        <HBox alignment="CENTER_LEFT" spacing="16">
            <CheckBox text="Remember me" style="-fx-font-size: 14; -fx-font-family: 'Inter'; -fx-text-fill: #525252;" />
            <Label text="Forgot Password?" style="-fx-font-size: 14; -fx-font-family: 'Inter'; -fx-text-fill: #525252;" />
        </HBox>

        <!-- Login Button -->
        <Button text="Login" style="-fx-background-color: #262626; -fx-text-fill: white; -fx-border-radius: 6; -fx-background-radius: 6; -fx-font-size: 16; -fx-font-family: 'Inter';" />
    </VBox>

    <!-- Register Link -->
    <HBox alignment="CENTER" spacing="8">
        <Label text="Don't have an account?" style="-fx-font-size: 14; -fx-font-family: 'Inter'; -fx-text-fill: #525252;" />
        <Label text="Register" style="-fx-font-size: 14; -fx-font-family: 'Inter'; -fx-text-fill: #262626;" />
    </HBox>

    <!-- Terms of Service -->
    <VBox alignment="CENTER" spacing="4">
        <Label text="By continuing, you agree to our" style="-fx-font-size: 14; -fx-font-family: 'Inter'; -fx-text-fill: #525252;" />
        <HBox alignment="CENTER" spacing="4">
            <Label text="Terms of Service" style="-fx-font-size: 14; -fx-font-family: 'Inter'; -fx-text-fill: #525252; -fx-underline: true;" />
            <Label text="and" style="-fx-font-size: 14; -fx-font-family: 'Inter'; -fx-text-fill: #525252;" />
            <Label text="Privacy Policy" style="-fx-font-size: 14; -fx-font-family: 'Inter'; -fx-text-fill: #525252; -fx-underline: true;" />
        </HBox>
    </VBox>

</VBox>
