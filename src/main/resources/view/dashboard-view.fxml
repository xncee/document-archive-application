<?xml version="1.0" encoding="UTF-8"?>

<!-- Import necessary JavaFX components -->

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<!-- Root VBox container for the entire Dashboard page -->

<VBox prefHeight="1051.0" prefWidth="1440.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.DashboardController">
    <!-- Link to external CSS for styling the dashboard -->
    <stylesheets>
        <URL value="@../styles/dashboard-style.css" />
    </stylesheets>

    <!-- Include header section from another FXML file -->
    <children>
        <fx:include source="header.fxml" />

        <!-- Main content area inside a StackPane -->
        <StackPane>
            <children>
                <!-- Dashboard container with sections for stats, documents, and footer -->
                <VBox alignment="TOP_LEFT" prefHeight="938.0" prefWidth="1440.0" styleClass="dashboard">

                    <!-- Main content area with statistics cards -->
                    <VBox alignment="CENTER_LEFT" styleClass="main-content">
                        <!-- HBox containing stat cards for total documents, recent uploads, and pending reviews -->
                        <HBox alignment="CENTER_LEFT" spacing="24.0">
                            <children>
                                <!-- Stat card for Total Documents -->
                                <VBox alignment="CENTER_LEFT" prefHeight="126.0" prefWidth="0.0" styleClass="stat-card" HBox.hgrow="ALWAYS">
                                    <HBox alignment="CENTER" styleClass="stat-header">
                                        <HBox HBox.hgrow="ALWAYS">
                                            <children>
                                                <Label styleClass="stat-title" text="Total Documents" />
                                            </children>
                                        </HBox>
                                        <!-- Icon for documents -->
                                        <ImageView preserveRatio="true" HBox.hgrow="ALWAYS">
                                            <Image url="@../icons/document-icon.png" />
                                        </ImageView>
                                    </HBox>
                                    <Label styleClass="stat-value" text="1,234" />
                                </VBox>

                                <!-- Stat card for Recent Uploads -->
                                <VBox styleClass="stat-card" HBox.hgrow="ALWAYS">
                                    <HBox styleClass="stat-header">
                                        <HBox HBox.hgrow="ALWAYS">
                                            <children>
                                                <Label styleClass="stat-title" text="Recent Uploads" />
                                            </children>
                                        </HBox>
                                        <!-- Icon for uploads -->
                                        <ImageView preserveRatio="true" HBox.hgrow="ALWAYS">
                                            <Image url="@../icons/arrow-up-icon.png" />
                                        </ImageView>
                                    </HBox>
                                    <Label styleClass="stat-value" text="56" />
                                </VBox>

                                <!-- Stat card for Pending Review -->
                                <VBox styleClass="stat-card" HBox.hgrow="ALWAYS">
                                    <HBox styleClass="stat-header">
                                        <HBox HBox.hgrow="ALWAYS">
                                            <children>
                                                <Label styleClass="stat-title" text="Pending Review" />
                                            </children>
                                        </HBox>
                                        <!-- Icon for pending reviews -->
                                        <ImageView preserveRatio="true" HBox.hgrow="ALWAYS">
                                            <Image url="@../icons/pending-icon-white.png" />
                                        </ImageView>
                                    </HBox>
                                    <Label styleClass="stat-value" text="12" />
                                </VBox>
                            </children>
                            <!-- Padding between stat cards -->
                            <padding>
                                <Insets left="24.0" right="24.0" top="24.0" />
                            </padding>
                        </HBox>

                        <!-- Document section with a header, search bar, and document table -->
                        <VBox styleClass="document-section" VBox.vgrow="ALWAYS">
                            <!-- Document section header with buttons to generate report and add document -->
                            <HBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="40.0" prefWidth="1200.0" styleClass="document-header">
                                <HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                                    <children>
                                        <Label prefHeight="21.0" prefWidth="170.0" styleClass="section-title" text="Document Library" />
                                    </children>
                                </HBox>
                                <!-- Button to generate a report -->
                                <HBox spacing="10.0">
                                    <children>
                                        <Button fx:id="generateReportBurron" onAction="#handleGenerateReport" prefHeight="40.0" prefWidth="170.0" styleClass="btn-secondary" text="Generate Report" HBox.hgrow="ALWAYS" />
                                        <!-- Button to add a document -->
                                        <Button fx:id="addDocumentButton" minHeight="-Infinity" onAction="#handleAddDocument" prefHeight="40.0" prefWidth="165.0" styleClass="btn-primary" HBox.hgrow="ALWAYS">
                                            <graphic>
                                                <ImageView>
                                                    <Image url="@../icons/add-icon.png" />
                                                </ImageView>
                                            </graphic>
                                            <text>Add Document</text>
                                        </Button>
                                    </children>
                                </HBox>
                            </HBox>

                            <!-- Search bar for searching documents -->
                            <HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="40.0" prefWidth="1200.0" styleClass="search-bar" VBox.vgrow="ALWAYS">
                                <HBox alignment="CENTER" prefHeight="49.0" prefWidth="1154.0" HBox.hgrow="ALWAYS">
                                    <children>
                                        <TextField onKeyPressed="#handleSearch" prefHeight="49.0" prefWidth="1191.0" promptText="Search documents..." styleClass="search-input" HBox.hgrow="ALWAYS" />
                                    </children>
                                </HBox>
                                <!-- Filter button with icon -->
                                <Button fx:id="filterButton" maxHeight="34.0" maxWidth="34.0" minHeight="34.0" minWidth="34.0" mnemonicParsing="false" onAction="#handleFilter" prefHeight="34.0" prefWidth="34.0">
                                    <graphic>
                                        <ImageView preserveRatio="true" styleClass="filter-icon">
                                            <Image url="@../icons/filter-icon.png" />
                                        </ImageView>
                                    </graphic>
                                </Button>
                            </HBox>

                            <!-- Table to display document information -->
                            <TableView fx:id="documentTable" styleClass="document-table" VBox.vgrow="ALWAYS">
                                <columns>
                                    <TableColumn fx:id="documentIdColumn" sortType="DESCENDING" text="Document" />
                                    <TableColumn fx:id="departmentColumn" text="Department" />
                                    <TableColumn fx:id="statusColumn" text="Status" />
                                    <TableColumn fx:id="createdDateColumn" text="Date" />
                                    <TableColumn fx:id="actionsColumn" text="Actions" />
                                </columns>
                                <!-- Column resize policy -->
                                <columnResizePolicy>
                                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                </columnResizePolicy>
                            </TableView>
                        </VBox>
                    </VBox>

                    <!-- Footer section with copyright and links -->
                    <VBox alignment="CENTER" styleClass="footer">
                        <HBox alignment="CENTER">
                            <children>
                                <!-- Footer content with copyright text -->
                                <HBox alignment="CENTER_LEFT" styleClass="footer-content" HBox.hgrow="NEVER">
                                    <Label text="© 2025 DocuVault. All rights reserved." HBox.hgrow="ALWAYS" />
                                </HBox>
                                <!-- Footer links for help, privacy, and terms -->
                                <HBox alignment="CENTER_RIGHT" styleClass="footer-links" HBox.hgrow="ALWAYS">
                                    <Hyperlink onAction="#handleHelpLink" text="Help" />
                                    <Hyperlink onAction="#handlePrivacyLink" text="Privacy" />
                                    <Hyperlink onAction="#handleTermsLink" text="Terms" />
                                </HBox>
                            </children>
                        </HBox>
                    </VBox>

                </VBox>
            </children>
        </StackPane>
    </children>
</VBox>
