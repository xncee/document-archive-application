                     <children>
                            <Label styleClass="section-title" text="Document Library" />
                     </children>
                  </HBox>
                  <HBox spacing="10.0">
                     <children>
                             <Button onAction="#handleGenerateReport" prefHeight="28.0" prefWidth="130.0" styleClass="btn-secondary" text="Generate Report" HBox.hgrow="ALWAYS" />
                             <Button minHeight="-Infinity" onAction="#handleAddDocument" prefHeight="28.0" prefWidth="150.0" styleClass="btn-primary" HBox.hgrow="ALWAYS">
                                 <graphic>
                                     <ImageView>
                                         <Image url="@../icons/filter-icon.png" />
                                     </ImageView>
                                 </graphic>
                                 <text>Add Document</text>
                             </Button>
                     </children>
                  </HBox>
                  </HBox>
      
                        <HBox styleClass="search-bar" VBox.vgrow="NEVER">
                      <TextField onKeyPressed="#handleSearch" prefHeight="49.0" prefWidth="649.0" promptText="Search documents..." styleClass="search-input" HBox.hgrow="ALWAYS" />
