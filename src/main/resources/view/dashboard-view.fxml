<?xml version="1.0" encoding="UTF-8"?>

<!-- Import necessary JavaFX components -->

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckMenuItem?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<!-- Root VBox container for the entire Dashboard page -->

<VBox xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.DashboardController">
    <!-- Link to external CSS for styling the dashboard -->
    <stylesheets>
        <URL value="@../styles/dashboard-style.css" />
    </stylesheets>

    <!-- Include header section from another FXML file -->
    <children>
        <fx:include source="header.fxml" />
      <ScrollPane fitToHeight="true" fitToWidth="true" focusTraversable="false" pannable="true">
         <content>
      
                    <!-- Main content area inside a StackPane -->
              <StackPane>
                  <children>
                      <!-- Dashboard container with sections for stats, documents, and footer -->
                      <VBox alignment="TOP_LEFT" styleClass="dashboard">
      
                                <!-- Main content area with statistics cards -->
                          <VBox alignment="CENTER_LEFT" styleClass="main-content">
                              <!-- HBox containing stat cards for total documents, recent uploads, and pending reviews -->
                              <HBox alignment="CENTER_LEFT" spacing="24.0">
                                  <children>
                                      <!-- Stat card for Total Documents -->
                                      <VBox alignment="CENTER_LEFT" styleClass="stat-card" HBox.hgrow="ALWAYS">
                                          <HBox alignment="CENTER" styleClass="stat-header">
                                              <HBox HBox.hgrow="ALWAYS">
                                                  <children>
                                                      <Label styleClass="stat-title" text="%label.totalDocuments" />
                                                  </children>
                                              </HBox>
                                              <!-- Icon for documents -->
                                              <ImageView preserveRatio="true" HBox.hgrow="ALWAYS">
                                                  <Image url="@../icons/document-icon.png" />
                                              </ImageView>
                                          </HBox>
                                          <Label fx:id="totalDocuments" styleClass="stat-value" text="%label.totalDocuments" />
                                      </VBox>
      
                                            <!-- Stat card for Recent Uploads -->
                                      <VBox styleClass="stat-card" HBox.hgrow="ALWAYS">
                                          <HBox styleClass="stat-header">
                                              <HBox HBox.hgrow="ALWAYS">
                                                  <children>
                                                      <Label styleClass="stat-title" text="%label.recentUploads" />
                                                  </children>
                                              </HBox>
                                              <!-- Icon for uploads -->
                                              <ImageView preserveRatio="true" HBox.hgrow="ALWAYS">
                                                  <Image url="@../icons/arrow-up-icon.png" />
                                              </ImageView>
                                          </HBox>
                                          <Label fx:id="recentUploads" styleClass="stat-value" text="%label.recentUploads" />
                                      </VBox>
      
                                            <!-- Stat card for Pending Review -->
                                      <VBox styleClass="stat-card" HBox.hgrow="ALWAYS">
                                          <HBox styleClass="stat-header">
                                              <HBox HBox.hgrow="ALWAYS">
                                                  <children>
                                                      <Label styleClass="stat-title" text="%label.pendingReview" />
                                                  </children>
                                              </HBox>
                                              <!-- Icon for pending reviews -->
                                              <ImageView preserveRatio="true" HBox.hgrow="ALWAYS">
                                                  <Image url="@../icons/pending-icon-white.png" />
                                              </ImageView>
                                          </HBox>
                                          <Label fx:id="pendingReview" styleClass="stat-value" text="%label.pendingReview" />
                                      </VBox>
                                  </children>
                                  <!-- Padding between stat cards -->
                                  <padding>
                                      <Insets left="24.0" right="24.0" top="24.0" />
                                  </padding>
                              </HBox>
      
                                    <!-- Document section with a header, search bar, and document table -->
                              <VBox maxHeight="1.7976931348623157E308" styleClass="document-section" VBox.vgrow="ALWAYS">
                                  <!-- Document section header with buttons to generate report and add document -->
                                  <HBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="40.0" prefWidth="1200.0" styleClass="document-header">
                                      <HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                                          <children>
                                              <Label prefHeight="21.0" prefWidth="170.0" styleClass="section-title" text="%label.documentLibrary" />
                                          </children>
                                      </HBox>
                                      <!-- Button to generate a report -->
                                      <HBox spacing="10.0">
                                          <children>
                                              <Button fx:id="generateReportButton" contentDisplay="CENTER" maxHeight="40.0" maxWidth="170.0" onAction="#handleGenerateReport" prefWidth="170.0" styleClass="btn-secondary" text="%button.generateReport" HBox.hgrow="ALWAYS" />
                                              <!-- Button to add a document -->
                                              <Button fx:id="addDocumentButton" maxHeight="40.0" onAction="#handleAddDocument" prefWidth="165.0" styleClass="btn-primary" text="%button.addDocument" HBox.hgrow="ALWAYS">
                                                  <graphic>
                                                      <ImageView>
                                                          <Image url="@../icons/add-icon.png" />
                                                      </ImageView>
                                                  </graphic>
                                                  <text>%button.addDocument%</text>
                                              </Button>
                                          </children>
                                      </HBox>
                                  </HBox>
      
                                        <!-- Search bar for searching documents -->
                                  <HBox styleClass="search-bar" VBox.vgrow="ALWAYS">
                                      <HBox alignment="CENTER" HBox.hgrow="ALWAYS">
                                          <children>
                                              <TextField maxHeight="42.0" maxWidth="1.7976931348623157E308" onKeyPressed="#handleSearch" promptText="%placeholder.searchDocument" styleClass="search-input" HBox.hgrow="ALWAYS" />
                                          </children>
                                      </HBox>
                                      <!-- Filter button with icon -->
                                      <Button fx:id="filterButton" maxHeight="34.0" maxWidth="34.0" mnemonicParsing="false" onAction="#handleFilter">
                                          <graphic>
                                              <ImageView preserveRatio="true" styleClass="filter-icon">
                                                  <Image url="@../icons/filter-icon.png" />
                                              </ImageView>
                                          </graphic>
                                      </Button>
                                  </HBox>
                                  <ScrollPane fitToHeight="true" fitToWidth="true" pannable="true" VBox.vgrow="ALWAYS">
                                      <content>
                                          <!-- Table to display document information -->
                                          <TableView fx:id="documentTable" editable="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" styleClass="document-table">
                                              <columns>
                                                  <TableColumn fx:id="documentIdColumn" maxWidth="1.7976931348623157E308" sortType="DESCENDING" text="%label.documentId">
                                                      <contextMenu>
                                                          <ContextMenu>
                                                              <items>
                                                                  <MenuItem mnemonicParsing="false" text="Unspecified Action" />
                                                                  <MenuItem mnemonicParsing="false" text="Unspecified Action" />
                                                                  <MenuItem mnemonicParsing="false" text="Unspecified Action" />
                                                                  <MenuItem mnemonicParsing="false" text="Unspecified Action" />
                                                                  <CheckMenuItem mnemonicParsing="false" text="Unspecified Action" />
                                                              </items>
                                                          </ContextMenu>
                                                      </contextMenu>
                                                  </TableColumn>
                                                  <TableColumn fx:id="titleColumn" prefWidth="75.0" text="%label.title" />
                                                  <TableColumn fx:id="departmentColumn" text="%label.department" />
                                                  <TableColumn fx:id="classificationColumn" prefWidth="75.0" text="%label.classification" />
                                                  <TableColumn fx:id="deadlineColumn" prefWidth="75.0" text="%label.deadlineDate" />
                                                  <TableColumn fx:id="statusColumn" text="%label.status" />
                                                  <TableColumn fx:id="createdDateColumn" text="%label.createdDate" />
                                                  <TableColumn fx:id="updatedDateColumn" prefWidth="75.0" text="%label.updatedDate" />
                                              </columns>
                                              <columnResizePolicy>
                                                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                              </columnResizePolicy>
                                          </TableView>
                                      </content>
                                  </ScrollPane>
                                  <HBox alignment="CENTER_RIGHT" maxWidth="1.7976931348623157E308" prefHeight="27.0">
                                      <children>
                                          <HBox alignment="CENTER_LEFT" spacing="10.0">
                                              <children>
                                                  <Button mnemonicParsing="false" text="%button.previous" />
                                                  <HBox alignment="CENTER" spacing="20.0">
                                                      <children>
                                                          <Button mnemonicParsing="false" text="1" />
                                                          <Button mnemonicParsing="false" text="2" />
                                                          <Button mnemonicParsing="false" text="3" />
                                                      </children>
                                                      <HBox.margin>
                                                          <Insets left="10.0" right="10.0" />
                                                      </HBox.margin>
                                                  </HBox>
                                                  <Button mnemonicParsing="false" text="%button.next" />
                                              </children>
                                          </HBox>
                                      </children>
                                  </HBox>
                              </VBox>
                          </VBox>
      
                                <!-- Footer section with copyright and links -->
                          <VBox alignment="CENTER" styleClass="footer">
                              <HBox alignment="CENTER">
                                  <children>
                                      <!-- Footer content with copyright text -->
                                      <HBox alignment="CENTER_LEFT" styleClass="footer-content" HBox.hgrow="NEVER">
                                          <Label text="Â© 2025 DocuVault. All rights reserved." HBox.hgrow="ALWAYS" />
                                      </HBox>
                                      <!-- Footer links for help, privacy, and terms -->
                                      <HBox alignment="CENTER_RIGHT" styleClass="footer-links" HBox.hgrow="ALWAYS">
                                          <children>
                                              <Hyperlink fx:id="helpLink" text="%link.help" />
                                              <Hyperlink fx:id="termsLink" text="%link.termsOfService" />
                                              <Hyperlink fx:id="privacyLink" text="%link.privacyPolicy" />
                                          </children>
                                      </HBox>
                                  </children>
                              </HBox>
                          </VBox>
                      </VBox>
                  </children>
              </StackPane>
         </content>
      </ScrollPane>
    </children>
</VBox>
