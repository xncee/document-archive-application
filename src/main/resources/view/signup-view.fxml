<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>

<?import javafx.scene.text.Text?>
<StackPane xmlns:fx="http://javafx.com/fxml/1" stylesheets="@../styles/signup.css" styleClass="signup-container">
    <VBox alignment="CENTER" spacing="20" styleClass="signup-card">
        <!-- Header Section -->
        <VBox alignment="CENTER" spacing="10" styleClass="header-section">
            <!-- Logo -->
            <ImageView fitWidth="32" fitHeight="36" preserveRatio="true">
                <Image url="@../icons/logo.png" />
            </ImageView>

            <!-- Title -->
            <Label text="Create your account" styleClass="signup-title" />
            <Label text="Fill in your information to get started" styleClass="signup-subtitle" />
        </VBox>

        <!-- Signup Form -->
        <VBox spacing="15" styleClass="signup-form">
            <!-- Username -->
            <VBox spacing="5" styleClass="form-group">
                <Label text="Username *" styleClass="form-label" />
                <TextField fx:id="usernameField" promptText="Enter your username" styleClass="form-input" />
            </VBox>

            <!-- Email -->
            <VBox spacing="5" styleClass="form-group">
                <Label text="Email address *" styleClass="form-label" />
                <TextField fx:id="emailField" promptText="Enter your email" styleClass="form-input" />
            </VBox>

            <!-- Fullname -->
            <VBox spacing="5" styleClass="form-group">
                <Label text="Full name *" styleClass="form-label" />
                <TextField fx:id="fullnameField" promptText="Enter your full name" styleClass="form-input" />
            </VBox>

            <!-- Password -->
            <VBox spacing="5" styleClass="form-group">
                <Label text="Password *" styleClass="form-label" />
                <PasswordField fx:id="passwordField" promptText="Enter your password" styleClass="form-input" />
            </VBox>

            <!-- Confirm Password -->
            <VBox spacing="5" styleClass="form-group">
                <Label text="Confirm password *" styleClass="form-label" />
                <PasswordField fx:id="confirmPasswordField" promptText="Re-enter your password" styleClass="form-input" />
            </VBox>

            <!-- Terms Section -->
            <HBox spacing="10" alignment="CENTER_LEFT" styleClass="terms-section">
                <CheckBox fx:id="termsCheckbox" styleClass="terms-checkbox" />
                <Label text="I agree to the " styleClass="terms-text">
                    <Text text="Terms of Service" styleClass="terms-link" />
                    <Text text=" and " />
                    <Text text="Privacy Policy" styleClass="terms-link" />
                    <Text text=" *" />
                </Label>
            </HBox>

            <!-- Submit Button -->
            <Button fx:id="submitButton" text="Create Account" styleClass="submit-button" maxWidth="Infinity" />
        </VBox>

        <!-- Login Section -->
        <VBox alignment="CENTER" spacing="6" styleClass="login-section">
            <Label text="Already have an account?" styleClass="login-text" />
            <Hyperlink text="Sign in" styleClass="login-link" />
        </VBox>
    </VBox>
</StackPane>
