<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>

<?import java.net.URL?>
<VBox styleClass="signup-container" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="control.SignupController" spacing="20" alignment="CENTER">

    <stylesheets>
        <URL value="@../styles/sign-up.css"/>
    </stylesheets>

    <VBox styleClass="signup-card" maxWidth="448" spacing="32">
        <VBox styleClass="header-section" alignment="CENTER" spacing="24">
            <ImageView styleClass="logo" fitWidth="32" fitHeight="36"
                       accessibleText="Company Logo">
                <Image url="https://cdn.builder.io/api/v1/image/assets/TEMP/b323add2165a4808c3569aa01e9b135f47342f417a171e8ed8a0eb9a72ff9cd3?placeholderIfAbsent=true&amp;apiKey=9a766a4cd698444e975ff2608bde167e"/>
            </ImageView>

            <Label styleClass="signup-title" text="Create your account"/>
            <Label styleClass="signup-subtitle" text="Fill in your information to get started"/>
        </VBox>

        <VBox styleClass="signup-form" spacing="13">
            <VBox styleClass="form-group">
                <Label styleClass="form-label" text="Username *"
                       labelFor="$usernameField"/>
                <TextField fx:id="usernameField" styleClass="form-input"
                           promptText="Enter username"/>
            </VBox>

            <VBox styleClass="form-group">
                <Label styleClass="form-label" text="Email address *"
                       labelFor="$emailField"/>
                <TextField fx:id="emailField" styleClass="form-input"
                           promptText="Enter email"/>
            </VBox>

            <VBox styleClass="form-group">
                <Label styleClass="form-label" text="Full name *"
                       labelFor="$fullnameField"/>
                <TextField fx:id="fullnameField" styleClass="form-input"
                           promptText="Enter full name"/>
            </VBox>

            <VBox styleClass="form-group">
                <Label styleClass="form-label" text="Password *"
                       labelFor="$passwordField"/>
                <PasswordField fx:id="passwordField" styleClass="form-input"
                               promptText="Enter password"/>
            </VBox>

            <VBox styleClass="form-group">
                <Label styleClass="form-label" text="Confirm password *"
                       labelFor="$confirmPasswordField"/>
                <PasswordField fx:id="confirmPasswordField" styleClass="form-input"
                               promptText="Confirm password"/>
            </VBox>

            <HBox styleClass="terms-section" spacing="12" alignment="CENTER_LEFT">
                <CheckBox fx:id="termsCheckbox" styleClass="terms-checkbox"/>
                <HBox spacing="4" alignment="CENTER_LEFT">
                    <Label text="I agree to the"/>
                    <Hyperlink text="Terms of Service"/>
                    <Label text="and"/>
                    <Hyperlink text="Privacy Policy"/>
                    <Label text="*"/>
                </HBox>
            </HBox>

            <Button styleClass="submit-button" text="Create Account"
                    onAction="#handleSignup"/>

            <VBox styleClass="login-section" alignment="CENTER" spacing="6">
                <Label styleClass="login-text" text="Already have an account?"/>
                <Hyperlink styleClass="login-link" text="Sign in"
                           onAction="#handleSignin"/>
            </VBox>
        </VBox>
    </VBox>
</VBox>