<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<HBox fx:id="titleBar" alignment="CENTER_RIGHT" maxWidth="1.7976931348623157E308" prefHeight="33.0" spacing="5.0" styleClass="title-bar" HBox.hgrow="ALWAYS" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="control.TitleBarController">
    <stylesheets>
        <URL value="@../styles/titlebar-style.css" />
    </stylesheets>
    <children>
        <!-- Title Bar Region for Dragging (topRegion) -->
        <Region fx:id="topRegion" maxWidth="Infinity" prefHeight="40.0" HBox.hgrow="ALWAYS" onMousePressed="#handleMousePressed" onMouseDragged="#handleMouseDragged" onMouseMoved="#handleMouseMoved" />

        <!-- Buttons Section (Minimize, Maximize, Close) -->
        <HBox alignment="CENTER" prefHeight="27.0" prefWidth="94.0" spacing="10.0">
            <children>
                <Button fx:id="minimizeButton" mnemonicParsing="false" HBox.hgrow="ALWAYS" onAction="#handleMinimize">
                    <graphic>
                        <ImageView fitHeight="16" fitWidth="16" preserveRatio="true">
                            <Image url="@../icons/minimize-icon.png" />
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="maximizeButton" mnemonicParsing="false" HBox.hgrow="ALWAYS" onAction="#handleMaximize">
                    <graphic>
                        <ImageView fitHeight="16" fitWidth="16" preserveRatio="true">
                            <Image url="@../icons/extend-icon.png" />
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="closeButton" mnemonicParsing="false" HBox.hgrow="ALWAYS" onAction="#handleClose">
                    <graphic>
                        <ImageView fitHeight="16" fitWidth="16" preserveRatio="true">
                            <Image url="@../icons/x-icon.png" />
                        </ImageView>
                    </graphic>
                </Button>
            </children>
            <HBox.margin>
                <Insets right="5.0" top="5.0" />
            </HBox.margin>
        </HBox>
    </children>
</HBox>